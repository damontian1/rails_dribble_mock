%h1= @post.title
= image_tag @post.image.url(:medium), class: "image1"
%p= pluralize(@post.get_upvotes.size, "Like")
%p= pluralize(@post.get_downvotes.size, "Dislike")
= link_to "Like", like_post_path(@post), method: :get
= link_to "Dislike", dislike_post_path(@post), method: :get
%p= @post.link
%p= @post.description
%p
	by
	= @post.user.name

#comment
	%h2.comment_count= pluralize(@post.comments.count, "Comment")
	- @comments.each do |comment|
		.comment
			%p
				%strong= comment.user.name
			%p= comment.content
	
= render "comments/form"

= link_to "Back", root_path
= link_to "Edit", edit_post_path
= link_to "Delete", post_path, method: :delete, data: {confirm: "are you sure?"}